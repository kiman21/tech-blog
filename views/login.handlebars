<div class="container my-4 col-med-6">
  <div class="d-flex">
    <div class="form-container">
    <h1>Login</h1>
      <form id="loginForm">
        <div class="form-group">
          <label for="loginUsername" class="mb-1">Username</label>
          <input type="username" class="form-control mb-2" id="loginUsername">
        </div>
        <div class="form-group">
          <label for="loginPassword" class="mb-1">Password</label>
          <input type="password" class="form-control mb-2" id="loginPassword">
        </div>
        <button type="submit" class="btn btn-primary" id="loginBtn">Login!</button>
        <a class="otherForm" href="/signup">Sign up instead</a>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>